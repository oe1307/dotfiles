#!/bin/bash

docker run \
    --platform=linux/amd64 \
    -it --rm \
    --mount "type=bind,source=$HOME/packages/share/vivado-on-silicon-mac,target=/tools/vivado" \
    --mount "type=bind,source=$PWD,target=/home/user" \
    x64-linux:latest \
    bash -lc 'cd /home/user && /tools/vivado/Xilinx/Vivado/2024.1/bin/vivado "$@"' -- "$@"
