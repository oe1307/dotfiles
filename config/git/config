[include]
    path = ~/.ssh/git-user.conf

[init]
    defaultBranch = main

[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
    grep = auto
    ui = auto

[core]
    editor = nvim
    pager = delta

[pull]
    rebase = true

[alias]
    ignore = "update-index --skip-worktree"
    unignore = "update-index --no-skip-worktree"
    reinit = "!sh -c ' \
        if [ ! -e .git ]; then \
            echo \"Not a git repository.\"; \
            exit 1; \
        fi; \
        BRANCH=$(git rev-parse --abbrev-ref HEAD) && \
        URL=$(git remote get-url origin) && \
        rm -rf .git && \
        git init && \
        git checkout -b \"$BRANCH\" && \
        git add . && \
        git commit -m \"initial commit\" && \
        git remote add origin \"$URL\" && \
        git push -u origin \"$BRANCH\" -f && \
        git pull \
    '"

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[credential]
    helper = store --file ~/.ssh/credentials
